# Telegram Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here
SOURCE_CHANNEL_ID=@source_channel_or_-100123456789
TARGET_CHANNEL_ID=@target_channel_or_-100123456789

# DeepSeek API Configuration
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# Admin User ID (for management commands)
ADMIN_USER_ID=your_telegram_user_id

# Publishing Schedule (hours in 24h format, comma-separated)
PUBLISH_SCHEDULE=8,12,16,20

# Urgent Keywords (for immediate publishing, comma-separated)
URGENT_KEYWORDS=молния,breaking

# Article Writing Style
# Available styles: informative, ironic, cynical, playful, mocking
# Default: informative
ARTICLE_STYLE=informative

# Other Settings
MAX_ARTICLES_PER_RUN=5
CHECK_INTERVAL=60

# Flask Settings (only for webhook mode)
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
WEBHOOK_URL=https://your-domain.com/webhook
